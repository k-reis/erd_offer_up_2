<%= form_with(model: @message, local: true) do |f| %>

  <%= f.hidden_field :seller_id, value: @seller.id %>

  <div class="form-group">
    <%= f.label :buyer_id %>

    <%= f.collection_select :buyer_id, Buyer.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :item_id %>

    <%= f.collection_select :item_id, Item.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create message", class: "btn btn-block btn-outline-secondary" %>
<% end %>
