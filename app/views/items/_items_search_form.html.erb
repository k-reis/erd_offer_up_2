        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='buyerlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :buyer_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Buyer Created at less than or equal to", :data => {:target => '#buyerlteqcreated_atPicker'} %>
