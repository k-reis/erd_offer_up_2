          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Buyer Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='buyergteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :buyer_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Buyer Created at greater than or equal to", :data => {:target => '#buyergteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#buyergteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
